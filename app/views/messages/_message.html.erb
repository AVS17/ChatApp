<%= turbo_frame_tag "message_#{message.id}", class: 'bg-gray-200 px-3 py-2 flex justify-between  rounded items-center gap-2 shadow' do %>
    <div class="flex gap-1">
        <span class="text-sm text-gray-600"><%= message.user.email%> </span>
        <span class="text-sm font-semibold"><%= message.message%> </span>
    </div>

    <div class="flex gap-3">
        <%= link_to edit_room_message_path(message, room_id: message.room), class: "px-3 py-1 text-sm font-medium text-white rounded bg-sky-800" do %>
            Edit
        <% end %>
        
        <%= button_to room_message_path(message.room, message), class: "px-3 py-1 text-sm font-medium text-white bg-red-800 rounded", method: :delete do%>
            Delete
        <% end %>
    </div>
<% end %>