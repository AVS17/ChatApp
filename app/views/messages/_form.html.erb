<div data-controller="form" class="w-full">
    <%= form_with(model: [room, message], id: 'message_form', class: 'w-full flex flex-col gap-1', data: {controller: 'form', action: 'submit->form#resetComponent'}) do |f| %>
        <div class="flex w-full gap-1">
            <%= f.text_field :message, class: 'w-full rounded shadow text-sm font-semibold border border-gray-100'%>
            <%= button_tag type: 'submit', class: 'bg-green-600 text-white font-semibold rounded p-2' do %>
            <svg fill="none" width="24px" stroke="white" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"></path>
            </svg>
            <% end %>
        </div>
    <% end %>
</div>
