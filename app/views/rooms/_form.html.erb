<div data-controller="form">
  <%= form_with(model: room, class: "flex flex-col my-3 w-full", data: {controller: 'form', action: 'submit->form#resetComponent'}) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation" class="px-3 py-2 mt-3 font-medium text-red-500 rounded-lg bg-red-50">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col justify-center gap-1">
    <%= form.label :name, class:'text-white font-semibold text-sm' %>
    <%= form.text_field :name, class: "w-full rounded border border-gray-200 font-semibold text-sm" %>
  </div>

  <div class="flex justify-end gap-2 mt-2">
    <%= form.submit class: "cursor-pointer p-2 text-sm text-white font-semibold bg-green-600 rounded" %>
    <%= link_to 'Cancel',:back,class:"cursor-pointer p-2 text-sm text-white font-semibold bg-red-600 rounded"%>
  </div>
<% end %>

</div>
