<main class="bg-[#181D31] h-screen flex flex-col justify-center gap-10">
  
  <section class="flex flex-col items-center gap-1">
    <%= image_tag('icon_chat.png', width:100)%>
    <h1 class="my-4 text-4xl font-bold text-white">Chat App - Ruby On Rails 7</h1>
    <p class="font-semibold text-center text-white">This is the ChatApp with RoR 7</p>
  </section>
  
  <section class="flex flex-col items-center ">
    <h2 class="mb-5 text-2xl font-bold text-white">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:'flex flex-col') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex items-center gap-1 my-2 w-96">
        <%= f.label :email, class: 'text-white font-semibold text-sm w-24'%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'text-sm font-medium rounded w-full' %>
      </div>

      <div class="flex flex-col justify-center my-5">
        <div class="flex items-center gap-1 w-96">
          <%= f.label :password, class: 'text-white font-semibold text-sm w-24' %>
          <%= f.password_field :password, autocomplete: "new-password", class:'text-sm font-medium rounded w-full' %>
        </div>

        <div class="flex items-center justify-end w-full">
          <% if @minimum_password_length %>
            <em class="text-sm font-semibold text-white">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>

      <div class="flex flex-col justify-center my-5">
        <%= f.label :password_confirmation, class: 'text-white font-semibold text-sm w-full mb-2' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'text-sm font-medium rounded w-full' %>
      </div>

      <div class="flex items-center justify-center gap-1 my-5">
        <%= f.submit "Sign up", class:'bg-green-800 rounded p-3 text-white font-semibold cursor-pointer hover:bg-green-600' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </section>
</main>

